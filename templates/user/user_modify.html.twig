{% extends "base.html.twig" %}

{% block title %}Update User{% endblock %}

{% block body %}

    <form class="w-75 mx-auto mt-5" action="{{ path('app_user_update_api', { email: user.email }) }}" method="post">
        <h1 class="text-center">Update User</h1>
        <div class="mb-3">
            <label for="firstName" class="form-label">First Name</label>
            <input type="text" class="form-control" id="firstName" name="firstName" value="{{ user.firstName|default('') }}">
        </div>
        <div class="mb-3">
            <label for="lastName" class="form-label">Last Name</label>
            <input type="text" class="form-control" id="lastName" name="lastName" value="{{ user.lastName|default('')}}">
        </div>
        <div class="mb-3">
            <label for="email" class="form-label">Email address</label>
            <input type="email" class="form-control" id="email" name="email" value="{{ user.email|default('')}}">
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>

{% endblock %}