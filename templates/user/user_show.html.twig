{% extends 'base.html.twig' %}

{% block title %}Votre utilisateur{% endblock %}

{% block body %}
    <div class="p-5 mb-4 bg-light rounded-3">
        <div class="container-fluid py-5">
            <h1 class="display-4">{{ user.firstName }} {{ user.lastName }}</h1>
            <p class="col-md-8 fs-4">{{ user.email }}</p>
            <a href="{{ path('app_user_modify', { email: user.email }) }}">
                <button class="btn btn-primary" type="button">Update user</button>
            </a>
            <a href="{{ path('app_user_delete_api', { email: user.email }) }}">
                <button class="btn btn-danger" type="button">Delete user</button>
            </a>
        </div>
    </div>
{% endblock %}
