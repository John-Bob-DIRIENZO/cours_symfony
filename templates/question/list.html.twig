{% extends 'base.html.twig' %}

{% block body %}
    <div class="p-5 mb-4 bg-light rounded-3 d-flex justify-content-between">
        <div class="container-fluid py-5">
            <h1 class="display-4">Toutes nos questions</h1>
            <p class="col-md-8 fs-4">Une belle liste de {{ questions|length }} éléments au total</p>
        </div>

    </div>


    <ul class="list-group list-group-flush">
        {% for question in questions %}

            <li class="list-group-item clearfix">
                <p style="color: red">{{ question.published ? 'Published' : 'NOT PUBLISED' }} -- {{ question.user.firstName }}</p>
                <p>{{ question.user.firstName }} : {{ question.name }}</p>
            </li>
        {% endfor %}
    </ul>


{% endblock %}

{% block title %}Toutes les quesitons{% endblock %}

