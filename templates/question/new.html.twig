{% extends 'base.html.twig' %}

{% block title %}Nouvelle question{% endblock %}

{% block body %}
    <h1 class="text-center">{{ titre }}</h1>

    <div style="max-width: 450px" class="mx-auto">

        {{ form_start(questionForm) }}
        {{ form_row(questionForm.name) }}
        {{ form_row(questionForm.question) }}

        {% if questionForm.vars.data.imageFilename != null %}
            <div class="text-center">
                <p>Image de la question</p>
                <img src="{{ asset(questionForm.vars.data.imagePath) }}" width="150"
                     height="150"
                     class="bd-placeholder-img rounded-circle" style="object-fit: cover">
            </div>
        {% endif %}
        {{ form_row(questionForm.imageFile) }}

        {{ form_row(questionForm.askedAt) }}
        {{ form_row(questionForm.user) }}
        {{ form_row(questionForm.submit) }}
        {{ form_end(questionForm) }}

    </div>
{% endblock %}